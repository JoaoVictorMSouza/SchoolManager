@model SchoolManager.Domain.Entities.Turma

@{
    ViewData["Title"] = "UpdateTurma";
    DateTime dhAtual = DateTime.Now;
}

<h1>Alterar turma</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateTurma">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CursoId" class="control-label"></label>
                <input asp-for="CursoId" class="form-control" />
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurmaNome" class="control-label"></label>
                <input asp-for="TurmaNome" class="form-control" />
                <span asp-validation-for="TurmaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" min="@dhAtual.Year" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListTurma">Voltar para a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
