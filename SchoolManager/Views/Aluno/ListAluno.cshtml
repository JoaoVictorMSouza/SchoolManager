@model IEnumerable<SchoolManager.Domain.Entities.Aluno>

@{
    ViewData["Title"] = "ListAluno";
}

<h1>Listagem de Alunos</h1>

<p>
    <a asp-action="CreateAlunoView">Inserir novo aluno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p class="text-capitalize">
                    @Html.DisplayNameFor(model => model.Id)
                </p>
            </th>
            <th>
                <p class="text-capitalize">
                    @Html.DisplayNameFor(model => model.nome)
                </p>
            </th>
            <th>
                <p class="text-capitalize">
                    @Html.DisplayNameFor(model => model.usuario)
                </p>
            </th>
            <th>
                <p class="text-capitalize">
                    @Html.DisplayNameFor(model => model.senha)
                </p>
            </th>
            <th>
                <p class="text-capitalize">
                    @Html.DisplayNameFor(model => model.inativo)
                </p>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
